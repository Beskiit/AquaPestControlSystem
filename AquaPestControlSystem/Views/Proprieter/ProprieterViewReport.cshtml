<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aquarius Pest Control Services - Customer Details</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/output.css" media="all" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.min.css" />
    <style>
        .table th, .table td {
            padding: 15px; 
        }
        .table th {
            background-color: #f8f9fa;
            font-weight: bold;
        }
        .card {
            margin-top: 30px;
        }

        .view-btn {
            cursor: pointer;
            color: #007bff;
            text-decoration: none;
        }
        .view-btn:hover {
            text-decoration: none; 
        }

        .modal-content img {
            width: 100%;
            max-height: 500px;
            object-fit: contain;
        }
    </style>
</head>
<body style="background-color: #8ecae6;">
    <div class="sidebar" id="menu">
        <h2>Aquarius Pest Control Services</h2>
        <a href="@Url.Action("ProprieterDashboard", "Proprieter")" class="menu-item" data-menu="Dashboard">
            <span class="icon">📋</span>
            <span>Dashboard</span>
        </a>
        <a href="@Url.Action("ProprieterAppointments", "Proprieter")" class="menu-item" data-menu="appointments">
            <span class="icon">📋</span>
            <span>Appointments</span>
        </a>
        <a href="@Url.Action("ProprieterCustomer", "Proprieter")" class="menu-item" data-menu="Customers">
            <span class="icon">📋</span>
            <span>Customers</span>
        </a>
        <a href="@Url.Action("ProprieterTechnicians", "Proprieter")" class="menu-item" data-menu="Technicians">
            <span class="icon">🔧</span>
            <span>Technicians</span>
        </a>
        <a href="@Url.Action("ProprieterReports", "Proprieter")" class="menu-item" data-menu="Reports">
            <span class="icon">📊</span>
            <span>Reports</span>
        </a>
        <a href="@Url.Action("ProprieterActivityLog", "Proprieter")" class="menu-item" data-menu="Activity-log">
            <span class="icon">📑</span>
            <span>Activity Log</span>
        </a>
        <a href="@Url.Action("ProprieterArchives", "Proprieter")" class="menu-item" data-menu="Archives">
            <span class="icon">📑</span>
            <span>Archives</span>
        </a>

        <div class="profile">
            <img src="https://via.placeholder.com/40" alt="Profile Picture">
            <div class="profile-info">
                <span>Rodrigo</span>
                <span class="role">Proprietor</span>
            </div>
            <span class="logout-arrow">⮞</span>
        </div>
    </div>

    <div class="content">
        <div class="table-container">

            <div class="header mb-4">
                <h2>Inspection Details</h2>
            </div>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Date of Inspection</th>
                        <td>09/10/2024</td>
                    </tr>
                    <tr>
                        <th>Technician Name</th>
                        <td>Jane Smith</td>
                    </tr>
                    <tr>
                        <th>Client Name</th>
                        <td>John Doe</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>123 Oak Street, Cityville</td>
                    </tr>
                    <tr>
                        <th>Contact Information</th>
                        <td>(123) 456-7890</td>
                    </tr>
                    <tr>
                        <th>Inspection Type</th>
                        <td>Termite Inspection</td>
                    </tr>
                    <tr>
                        <th>Areas Inspected</th>
                        <td>Living Room, Basement</td>
                    </tr>
                    <tr>
                        <th>Treatment Type</th>
                        <td>Chemical Treatment</td>
                    </tr>
                    <tr>
                        <th>Pest Type</th>
                        <td>Termites</td>
                    </tr>
                    <tr>
                        <th>Sales Input</th>
                        <td>$350.00</td>
                    </tr>
                    <tr>
                        <th>Inspection Images</th>
                        <td>
                            <span class="view-btn" data-bs-toggle="modal" data-bs-target="#inspectionModal">View Images</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="inspectionModal" tabindex="-1" aria-labelledby="inspectionModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="inspectionModalLabel">Inspection Images</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div id="inspectionCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="https://via.placeholder.com/500x300?text=Inspection+Image+1" class="d-block w-100" alt="Inspection Image 1">
                            </div>
                            <div class="carousel-item">
                                <img src="https://via.placeholder.com/500x300?text=Inspection+Image+2" class="d-block w-100" alt="Inspection Image 2">
                            </div>
                            <div class="carousel-item">
                                <img src="https://via.placeholder.com/500x300?text=Inspection+Image+3" class="d-block w-100" alt="Inspection Image 3">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#inspectionCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#inspectionCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/proSidebar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
