<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aquarius Pest Control Services - Activity Log</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/output.css" media="all" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.min.css" />
    <style>
        table th, table td {
            border-bottom: 1px solid #ccc;
        }

        .profile {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

        .profile img {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            margin-right: 10px;
        }

        .profile-info {
            color: #fff;
            margin-right: 10px;
        }

        .profile-info .role {
            font-size: 12px;
            color: #bbb;
        }

        /* Profile Edit Container */
        .profile-edit-container {
            background-color: white;
            border-radius: 8px;
            padding: 30px;
            width: 70%;
            margin: 50px auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .profile-edit-container h3 {
            font-size: 24px;
            color: #219ebc;
            margin-bottom: 20px;
        }

        .profile-edit-container label {
            font-size: 14px;
            color: #333;
            margin-top: 10px;
        }

        .profile-edit-container input,
        .profile-edit-container textarea {
            border-radius: 5px;
            padding: 10px;
            width: 100%;
            margin-bottom: 15px;
            font-size: 14px;
            border: 1px solid #ccc;
        }

        .profile-edit-container textarea {
            height: 120px;
        }

        .profile-edit-container .image-upload {
            text-align: center;
        }

        .profile-edit-container .image-upload input[type="file"] {
            display: none;
        }

        .profile-edit-container .image-upload label {
            display: inline-block;
            background-color: #219ebc;
            color: white;
            padding: 12px;
            border-radius: 50%;
            cursor: pointer;
            font-size: 14px;
        }

        .profile-edit-container .image-upload img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
        }

        .profile-edit-container .btn-primary {
            background-color: #219ebc;
            border-color: #219ebc;
            font-size: 14px;
            padding: 10px 20px;
        }

        .profile-edit-container .btn-secondary {
            background-color: #ccc;
            border-color: #ccc;
            font-size: 14px;
            padding: 10px 20px;
        }
    </style>
</head>

<body style="background-color: #8ecae6;">
    <div class="sidebar" id="menu">
        <h2>Aquarius Pest Control Services</h2>

        <a href="@Url.Action("ProprieterDashboard", "Proprieter")" class="menu-item" data-menu="Dashboard">
            <span class="icon">📋</span>
            <span>Dashboard</span>
        </a>
        <a href="@Url.Action("ProprieterAppointments", "Proprieter")" class="menu-item" data-menu="appointments">
            <span class="icon">📅</span>
            <span>Appointments</span>
        </a>
        <a href="@Url.Action("ProprieterCustomer", "Proprieter")" class="menu-item" data-menu="Customers">
            <span class="icon">👥</span>
            <span>Customers</span>
        </a>
        <a href="@Url.Action("ProprieterTechnicians", "Proprieter")" class="menu-item" data-menu="Technicians">
            <span class="icon">🔧</span>
            <span>Technicians</span>
        </a>
        <a href="@Url.Action("ProprieterReports", "Proprieter")" class="menu-item" data-menu="Reports">
            <span class="icon">📊</span>
            <span>Reports</span>
        </a>
        <a href="@Url.Action("ProprieterActivityLog", "Proprieter")" class="menu-item" data-menu="Activity-log">
            <span class="icon">📑</span>
            <span>Activity Log</span>
        </a>

        <div class="profile">
            <a href="@Url.Action("ProprieterProfile", "Proprieter")" style="display: flex; align-items: center; text-decoration: none;">
                <img src="https://via.placeholder.com/40" alt="Profile Picture">
                <div class="profile-info">
                    <span>Rodrigo</span>
                    <span class="role">Proprietor</span>
                </div>
            </a>
        </div>
    </div>

    <div class="profile-edit-container">
        <h3>Edit Profile</h3>
        <form action="@Url.Action("UpdateProfile", "Proprieter")" method="post" enctype="multipart/form-data">
            <div class="image-upload">
                <img src="https://via.placeholder.com/100" id="profileImage" alt="Profile Image">
                <input type="file" id="imageInput" name="profileImage" accept="image/*" onchange="previewImage(event)">
                <label for="imageInput">Change Image</label>
            </div>

            <label for="name">Full Name</label>
            <input type="text" id="name" name="name" value="Rodrigo" required />

            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="rodrigo@example.com" required />

            <label for="role">Role</label>
            <input type="text" id="role" name="role" value="Proprietor" disabled />

            <label for="bio">Bio</label>
            <textarea id="bio" name="bio" placeholder="Tell us about yourself...">Proprietor of Aquarius Pest Control Services</textarea>

            <button type="submit" class="btn btn-primary"   onclick="window.location.href='@Url.Action("ProprieterDashboard", "Proprieter")'">Save Changes</button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("ProprieterDashboard", "Proprieter")'">Cancel</button>
        </form>
    </div>

    <script src="~/js/proSidebar.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
  
        function previewImage(event) {
            const file = event.target.files[0];
            const reader = new FileReader();
            reader.onload = function () {
                document.getElementById('profileImage').src = reader.result;
            }
            reader.readAsDataURL(file);
        }
    </script>
</body>
