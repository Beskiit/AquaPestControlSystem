@{
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aquarius Pest Control Services</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/output.css" media="all" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="sidebar" id="menu">
        <h2>Aquarius Pest Control Services</h2>

        <a href="@Url.Action("ProprieterDashboard", "Proprieter")" class="menu-item" data-menu="Dashboard">
            <span class="icon">📋</span>
            <span>Dashboard</span>
        </a>
        <a href="@Url.Action("ProprieterSchedule", "Proprieter")" class="menu-item" data-menu="Schedule">
            <span class="icon">📑</span>
            <span>Archives</span>
        </a>
        <a href="@Url.Action("ProprieterCustomer", "Proprieter")" class="menu-item" data-menu="Customers">
            <span class="icon">📋</span>
            <span>Customers</span>
        </a>
        <a href="@Url.Action("ProprieterTechnicians", "Proprieter")" class="menu-item" data-menu="Technicians">
            <span class="icon">🔧</span>
            <span>Technicians</span>
        </a>
        <a href="@Url.Action("ProprieterReports", "Proprieter")" class="menu-item" data-menu="Reports">
            <span class="icon">📊</span>
            <span>Reports</span>
        </a>
        <a href="@Url.Action("ProprieterContacts", "Proprieter")" class="menu-item" data-menu="Contacts">
            <span class="icon">📞</span>
            <span>Contact Us</span>
        </a>
        <a href="@Url.Action("ProprieterActivityLog", "Proprieter")" class="menu-item" data-menu="Activity-log">
            <span class="icon">📑</span>
            <span>Activity Log</span>
        </a>
        <a href="@Url.Action("ProprieterArchives", "Proprieter")" class="menu-item" data-menu="Archives">
            <span class="icon">📑</span>
            <span>Archives</span>
        </a>

        <div class="profile">
            <img src="https://via.placeholder.com/40" alt="Profile Picture">
            <div class="profile-info">
                <span>Rodrigo</span>
                <span class="role">Proprietor</span>
            </div>
            <span class="logout-arrow">⮞</span>
        </div>
    </div>

    <div class="content">
        <!-- Stats Section -->
        <div class="mx-4 py-6 max-w-full sm:mx-auto sm:px-6 lg:px-8">
            <div class="sm:flex sm:space-x-4">
                <!-- Total Customers Card -->
                <div class="bg-white mb-4 p-5 inline-block w-full transform overflow-hidden rounded-lg text-left align-bottom shadow transition-all sm:w-1/3 sm:my-8">
                    <div class="space-x-4 flex items-center">
                        <div class="text-green-500 text-4xl">
                            <span>👥</span>
                        </div>
                        <div>
                            <h3 class="text-gray-400 text-sm font-medium leading-6">Total Customers</h3>
                            <p class="text-black text-3xl font-bold">14</p>
                        </div>
                    </div>
                </div>

                <!-- Technicians Card -->
                <div class="bg-white mb-4 p-5 inline-block w-full transform overflow-hidden rounded-lg text-left align-bottom shadow transition-all sm:w-1/3 sm:my-8">
                    <div class="space-x-4 flex items-center">
                        <div class="text-blue-500 text-4xl">
                            <span>🔧</span>
                        </div>
                        <div>
                            <h3 class="text-gray-400 text-sm font-medium leading-6">Technicians</h3>
                            <p class="text-black text-3xl font-bold">9</p>
                        </div>
                    </div>
                </div>

                <!-- On Work Card -->
                <div class="bg-white mb-4 p-5 inline-block w-full transform overflow-hidden rounded-lg text-left align-bottom shadow transition-all sm:w-1/3 sm:my-8">
                    <div class="space-x-4 flex items-center">
                        <div class="text-yellow-500 text-4xl">
                            <span>📋</span>
                        </div>
                        <div>
                            <h3 class="text-gray-400 text-sm font-medium leading-6">On Work</h3>
                            <p class="text-black text-3xl font-bold">2</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts Section -->
        <div class="table-container p-6 relative flex items-start justify-start">
            <!-- Smaller container for the line chart -->
            <div class="bg-white p-4 w-full rounded-lg shadow sm:w-1/2 sm:mb-0">
                <h2 class="text-gray-400 mb-2 text-xs font-semibold">Sales per Month</h2>
                <canvas id="salesChart" width="350" height="60"></canvas>
            </div>

            <!-- Container for Pest and Customers Charts -->
            <div class="mt-8 flex w-full sm:w-1/2 sm:mt-0">
                <!-- Pests Chart (Horizontal Bar Chart) -->
                <div class="pr-4">
                    <h2 class="text-gray-400 mb-2 text-xs font-semibold">Pests per Month (Percentages)</h2>
                    <canvas id="barChart1" width="350" height="170"></canvas>
                </div>

                <!-- Customers Chart (Bar Chart) -->
                <div class="w-1/2">
                    <h2 class="text-gray-400 mb-2 text-xs font-semibold">Customers per Month</h2>
                    <canvas id="barChart2" width="350" height="170"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const ctx = document.getElementById('salesChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Sales',
                        data: [300, 400, 350, 500, 600, 450, 700, 800, 650, 700, 750, 900],
                        borderColor: 'rgba(34, 197, 94, 0.8)',
                        backgroundColor: 'rgba(34, 197, 94, 0.2)',
                        fill: true,
                        tension: 0.3,
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: { display: true, text: 'Month', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        },
                        y: {
                            title: { display: true, text: 'Sales', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: { mode: 'index', intersect: false }
                    }
                }
            });

            const ctxBar1 = document.getElementById('barChart1').getContext('2d');
            new Chart(ctxBar1, {
                type: 'bar',
                data: {
                    labels: ['Rodents', 'Ants', 'Cockroaches', 'Bed Bugs', 'Mosquitoes'],
                    datasets: [{
                        label: 'Pests',
                        data: [25, 30, 15, 20, 10],
                        backgroundColor: 'rgba(56, 189, 248, 0.6)',
                        borderColor: 'rgba(56, 189, 248, 1)',
                        borderWidth: 1,
                    }]
                },
                options: {
                    responsive: true,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            title: { display: true, text: 'Percentage', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        },
                        y: {
                            title: { display: true, text: 'Pests', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: { mode: 'index', intersect: false }
                    }
                }
            });

            const ctxBar2 = document.getElementById('barChart2').getContext('2d');
            new Chart(ctxBar2, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Customers',
                        data: [50, 60, 55, 70, 80, 65, 90, 100, 85, 95, 100, 110],
                        backgroundColor: 'rgba(59, 130, 246, 0.6)',
                        borderColor: 'rgba(59, 130, 246, 1)',
                        borderWidth: 1,
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: { display: true, text: 'Month', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        },
                        y: {
                            title: { display: true, text: 'Customers', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: { mode: 'index', intersect: false }
                    }
                }
            });
        });
    </script>
</body>
<script src="~/js/proSidebar.js"></script>
</html>
