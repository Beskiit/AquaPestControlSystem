</div> </div> </div>

<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to log out?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <a href="@Url.Action("UserLogin", "User")" class="btn btn-primary">Confirm</a>
            </div>
        </div>
    </div>
</div>


 <div class="content">
    <!-- Stats Section -->
    <div class="mx-4 py-6 max-w-full sm:mx-auto sm:px-6 lg:px-8">
        <div class="row g-4">
            <!-- Total Customers Card -->
            <div class="col-12 col-sm-4">
                <div class="card shadow-lg border-0 rounded-lg text-center p-1 bg-light">
                    <div class="d-flex justify-content-center mb-2">
                        <div class="text-success display-4">
                            <span>👥</span>
                        </div>
                    </div>
                    <h3 class="text-muted small">Total Customers</h3>
                    <p class="text-dark display-4 font-weight-bold">14</p>
                </div>
            </div>

            <!-- Technicians Card -->
            <div class="col-12 col-sm-4">
                <div class="card shadow-lg border-0 rounded-lg text-center p-1 bg-light">
                    <div class="d-flex justify-content-center mb-2">
                        <div class="text-primary display-4">
                            <span>🔧</span>
                        </div>
                    </div>
                    <h3 class="text-muted small">Technicians</h3>
                    <p class="text-dark display-4 font-weight-bold">9</p>
                </div>
            </div>

            <!-- On Work Card -->
            <div class="col-12 col-sm-4">
                <div class="card shadow-lg border-0 rounded-lg text-center p-1 bg-light">
                    <div class="d-flex justify-content-center mb-2">
                        <div class="text-warning display-4">
                            <span>📋</span>
                        </div>
                    </div>
                    <h3 class="text-muted small">On Work</h3>
                    <p class="text-dark display-4 font-weight-bold">2</p>
                </div>
            </div>
        </div>
    </div>

 
    <div class="table-container p-6 relative flex items-start justify-start mt-5"> 

        <div class="bg-white p-4 w-full rounded-lg shadow sm:w-1/2 sm:mb-0 mb-4"> 
            <h2 class="text-gray-400 mb-2 text-xs font-semibold">Sales per Month</h2>
            <canvas id="salesChart" width="350" height="60"></canvas>
        </div>

        <div class="row mt-8">
   
            <div class="col-md-6 mb-4"> 
                <h2 class="text-gray-400 mb-2 text-xs font-semibold">Pests per Month (Percentages)</h2>
                <canvas id="barChart1" width="350" height="120"></canvas> 
            </div>


            <div class="col-md-6 mb-4"> 
                <h2 class="text-gray-400 mb-2 text-xs font-semibold">Customers per Month</h2>
                <canvas id="barChart2" width="350" height="120"></canvas> 
            </div>
        </div>
    </div>
</div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const ctx = document.getElementById('salesChart').getContext('2d');
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Sales',
                        data: [300, 400, 350, 500, 600, 450, 700, 800, 650, 700, 750, 900],
                        borderColor: 'rgba(34, 197, 94, 0.8)',
                        backgroundColor: 'rgba(34, 197, 94, 0.2)',
                        fill: true,
                        tension: 0.3,
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: { display: true, text: 'Month', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        },
                        y: {
                            title: { display: true, text: 'Sales', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: { mode: 'index', intersect: false }
                    }
                }
            });

            const ctxBar1 = document.getElementById('barChart1').getContext('2d');
            new Chart(ctxBar1, {
                type: 'bar',
                data: {
                    labels: ['Rodents', 'Ants', 'Cockroaches', 'Bed Bugs', 'Mosquitoes'],
                    datasets: [{
                        label: 'Pests',
                        data: [25, 30, 15, 20, 10],
                        backgroundColor: 'rgba(56, 189, 248, 0.6)',
                        borderColor: 'rgba(56, 189, 248, 1)',
                        borderWidth: 1,
                    }]
                },
                options: {
                    responsive: true,
                    indexAxis: 'y',
                    scales: {
                        x: {
                            title: { display: true, text: 'Percentage', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        },
                        y: {
                            title: { display: true, text: 'Pests', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: { mode: 'index', intersect: false }
                    }
                }
            });

            const ctxBar2 = document.getElementById('barChart2').getContext('2d');
            new Chart(ctxBar2, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Customers',
                        data: [50, 60, 55, 70, 80, 65, 90, 100, 85, 95, 100, 110],
                        backgroundColor: 'rgba(59, 130, 246, 0.6)',
                        borderColor: 'rgba(59, 130, 246, 1)',
                        borderWidth: 1,
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            title: { display: true, text: 'Month', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        },
                        y: {
                            title: { display: true, text: 'Customers', color: '#4B5563' },
                            grid: { color: 'rgba(229, 231, 235, 0.2)' },
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: { mode: 'index', intersect: false }
                    }
                }
            });
        });
    </script>
<script src="~/js/proSidebar.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
     </script>
    </body>
</html>
