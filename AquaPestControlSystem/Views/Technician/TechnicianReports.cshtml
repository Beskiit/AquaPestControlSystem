<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aquarius Pest Control Services - Activity Log</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/output.css" media="all" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.min.css" />
    <style>
        .content {
            display: flex;
            flex-wrap: nowrap;
            height: 100vh;
        }

        .table-container {
            padding: 20px;
            margin: 10px;
            flex: 1 0 auto;
            box-sizing: border-box;
        }

        .col-md-6 {
            padding-left: 15px;
            padding-right: 15px;
            display: flex;
            flex: 1 0 50%;
            flex-direction: column;
        }

        .table-container h2 {
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            table-layout: fixed;
        }

        .table th, .table td {
            text-align: center;
            padding: 8px;
        }

        .form-label {
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
        }

        .row {
            margin-bottom: 15px;
        }

        .btn {
            padding: 10px 30px;
            font-size: 16px;
            margin-top: 20px;
        }

        input[type="file"] {
            padding: 10px;
            margin-bottom: 10px;
            width: 100%;
        }

        #problemImage {
            text-align: left;
            margin-top: 10px;
        }

        /* Modal Styles */
        .modal-content {
            background-color: #f0f8ff; /* Light blue background */
        }

        .modal-header {
            background-color: #007bff; /* Blue background for header */
            color: white; /* White text color */
        }

        .modal-footer button {
            background-color: #28a745; /* Green background for buttons */
        }
    </style>
</head>
<body style="background-color: #8ecae6;">
    <div class="sidebar" id="menu">
        <h2>Aquarius Pest Control Services</h2>
        <a href="@Url.Action("TechnicianDashboard", "Technician")" class="menu-item" data-menu="Dashboard">
            <span class="icon">📋</span>
            <span>Dashboard</span>
        </a>
        <a href="@Url.Action("TechnicianReports", "Technician")" class="menu-item" data-menu="Reports">
            <span class="icon">📋</span>
            <span>Reports</span>
        </a>
        <a href="@Url.Action("TechnicianRequest", "Technician")" class="menu-item" data-menu="Request">
            <span class="icon">📋</span>
            <span>Request</span>
        </a>
        <a href="@Url.Action("TechnicianSchedule", "Technician")" class="menu-item" data-menu="Schedule">
            <span class="icon">📋</span>
            <span>Schedule</span>
        </a>
        <div class="profile">
            <img src="https://via.placeholder.com/40" alt="Profile Picture">
            <div class="profile-info">
                <span>Rodrigo</span>
                <span class="role">Proprietor</span>
            </div>
            <span class="logout-arrow">⮞</span>
        </div>
    </div>

    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="table-container">
                        <h2 class="text-center mb-4">INSPECTION SUMMARY</h2>
                        <form id="inspectionForm">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="dateInspection" class="form-label">Date Inspection:</label>
                                    <input type="date" class="form-control" id="dateInspection">
                                </div>
                                <div class="col-md-6">
                                    <label for="inspectorName" class="form-label">Inspector Name:</label>
                                    <input type="text" class="form-control" id="inspectorName">
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="clientName" class="form-label">Client Name:</label>
                                    <input type="text" class="form-control" id="clientName">
                                </div>
                                <div class="col-md-6">
                                    <label for="address" class="form-label">Address:</label>
                                    <input type="text" class="form-control" id="address">
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="contactInfo" class="form-label">Contact Information:</label>
                                    <input type="text" class="form-control" id="contactInfo">
                                </div>
                                <div class="col-md-6">
                                    <label for="inspectionType" class="form-label">Inspection Type:</label>
                                    <select class="form-select" id="inspectionType">
                                        <option selected disabled>Select</option>
                                        <option>Initial</option>
                                        <option>Routine</option>
                                        <option>Follow Up</option>
                                        <option>Food Safety Compliance</option>
                                        <option>Others</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="area" class="form-label">Areas:</label>
                                    <select class="form-select" id="area">
                                        <option selected disabled>Select</option>
                                        <option>Kitchen</option>
                                        <option>Storage Areas</option>
                                        <option>Bathrooms</option>
                                        <option>Basement/Attics</option>
                                        <option>Outdoor Areas</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="treatmentType" class="form-label">Treatment Type:</label>
                                    <select class="form-select" id="treatmentType">
                                        <option selected disabled>Select</option>
                                        <option>Chemical Spray</option>
                                        <option>Bait Stations</option>
                                        <option>Traps</option>
                                        <option>Exclusion Methods</option>
                                        <option>Other</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="pestType" class="form-label">Pest Type:</label>
                                    <select class="form-select" id="pestType">
                                        <option selected disabled>Select</option>
                                        <option>Rodent</option>
                                        <option>Termites</option>
                                        <option>Mosquito</option>
                                        <option>Ants</option>
                                        <option>Cockroach</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="salesInput" class="form-label">Sales Input:</label>
                                    <input type="text" class="form-control" id="salesInput" placeholder="Enter sales details">
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="problemImage" class="form-label">Add Image for Problem:</label>
                                    <input type="file" class="form-control" id="problemImage" accept="image/*" multiple>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#submitModal">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="table-container">
                        <h2 class="text-center mb-4">Previous Reports</h2>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Report ID</th>
                                    <th>Date</th>
                                    <th>Inspector Name</th>
                                    <th>Client Name</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>#001</td>
                                    <td>2024-12-05</td>
                                    <td>John Doe</td>
                                    <td>ABC Company</td>
                                    <td>Completed</td>
                                </tr>
                                <tr>
                                    <td>#002</td>
                                    <td>2024-12-06</td>
                                    <td>Jane Smith</td>
                                    <td>XYZ Corp</td>
                                    <td>Pending</td>
                                </tr>
                                <tr>
                                    <td>#003</td>
                                    <td>2024-12-07</td>
                                    <td>Rodrigo</td>
                                    <td>LMN Industries</td>
                                    <td>Completed</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="submitModal" tabindex="-1" role="dialog" aria-labelledby="submitModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="submitModalLabel">Submit Inspection</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to submit the inspection details?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitForm()">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/proSidebar.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function submitForm() {
            $('#submitModal').modal('hide');
            alert('Inspection Submitted');
            // You can perform form submission here if needed
        }
    </script>
</body>
</html>
